<h1 class='index_title'>All Spells</h1>
  <div class="main-container">
    <div class="card-section--mod">
      <ul class="cards">
        <div class="cards__wrapper_resize margin-zero">
          <% @spells.each do |spell| %>
            <li class="card__Separate">
              <%= link_to spell_path(spell) do %>
                <div class="card-trip">
                  <% if spell.photo.attached? %>
                  <%= cl_image_tag spell.photo.key, class: 'show__img border-r' %>
                  <% end  %>

                  <% if spell.photo.attached? == false %>
                    <%= image_tag @background_img.sample %>
                  <% end  %>
                  <div class="card-trip-infos">
                    <div class="text__box--adj">
                      <div>
                        <h2><%= spell.name.capitalize %></h2>
                        <p><%= spell.description.capitalize %></p>
                      </div>
                      <div>
                        <p><%= spell.category.capitalize %></p>
                        <p class="location"><%= spell.location.capitalize %></p>
                      </div>
                    </div>
                    <h2 class="card-trip-pricing price">$<%= spell.price%></h2>
                    <%= cl_image_tag @user.avatar.key, class: 'card-trip-user avatar-bordered' %>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </div>
      </ul>
    </div>

    <div class ="map-container">
      <div id='map' class ="map"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API'] %>">
      </div>
    </div>
  </div>
</div>
