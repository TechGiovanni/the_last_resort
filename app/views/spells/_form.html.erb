<%= simple_form_for(@spell) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, collection: ['Home', 'Self', 'Love', 'Social', 'Family', 'Career'] %>
    <%= f.input :location,
      input_html: {data: {location_autocomplete_target: "location"}},
      wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API"]}}
    %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions ">
    <%= f.button :submit, class: 'form__submit' %>
  </div>
<% end %>
